{
    "name": "mern-e-commerce",
    "version": "1.0.0",
    "description": "Demo Shop Project with React Tailwind Node MongoDB. It implements authentication as well as admin functionality.",
    "main": "server.js",
    "scripts": {
        "clean": "node server/cleaner.js",
        "start": "node server/server.js",
        "server": "nodemon server/server.js",
        "client": "npm run dev --prefix client",
        "dev": "concurrently \"npm run server\" \"npm run client\" ",
        "seed:create": "node server/seeder.js",
        "seed:delete": "node server/seeder.js -d"
    },
    "author": "Ashish",
    "license": "MIT",
    "type": "module",
    "dependencies": {
        "bcryptjs": "^2.4.3",
        "concurrently": "^8.2.0",
        "cookie-parser": "^1.4.6",
        "express": "^4.18.2",
        "jsonwebtoken": "^9.0.1",
        "mongodb": "^6.6.0",
        "mongoose": "^7.4.0",
        "nodemon": "^3.0.1",
        "razorpay": "^2.9.2"
    },
    "devDependencies": {
        "dotenv": "^16.3.1"
    }
}
